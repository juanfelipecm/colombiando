---
interface Props {
  title: string;
  isOpen?: boolean;
  color?: "red" | "blue" | "yellow";
}

const { title, isOpen = false, color = "red" } = Astro.props;

const colorMap = {
  red: "#D00000",
  blue: "#0060BB",
  yellow: "#FFB100"
};

const colorValue = colorMap[color];
---

<div class={`accordion-item border border-[${colorValue}]`} data-color={colorValue}>
  <button 
    class="accordion-header w-full flex justify-between items-center py-6 px-4 text-left cursor-pointer"
    style={`background-color: ${isOpen ? 'white' : colorValue}; color: ${isOpen ? colorValue : 'white'};`}
  >
    <h2 class="text-xl md:text-3xl font-bold">{title}</h2>
    <span class="accordion-icon text-3xl font-light">
      {isOpen ? '-' : '+'}
    </span>
  </button>
  <div class="accordion-content px-4 pb-6 overflow-x-auto" style={`display: ${isOpen ? 'block' : 'none'}`}>
    <div class="content-inner text-lg">
      <slot />
    </div>
  </div>
</div> 