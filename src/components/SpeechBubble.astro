---
interface Props {
  content?: string;
  className?: string;
}

const { content, className = ""} = Astro.props;
---

<div class={`speech-bubble ${className}`}>
  <slot>{content}</slot>
</div>

<style>
  .speech-bubble {
    box-sizing: border-box;
    position: relative;
    background: #FFB100;
    border: 3px solid #000000;
    box-shadow: 5px 5px 0px #000000;
    padding: 20px;
    max-width: 250px;
    border-radius: 16px;
    font-weight: 600;
    font-size: 0.75rem;
  }
  
  @media (min-width: 1024px) {
    .speech-bubble {
      font-size: 1rem;
    }
  }
  
  .speech-bubble::after {
    content: "";
    position: absolute;
    bottom: -17px;
    left: 20px;
    width: 30px;
    height: 30px;
    background: #FFB100;
    border-right: 3px solid #000000;
    border-bottom: 3px solid #000000;
    box-shadow: 4px 4px 0px #000000;
    transform: rotate(45deg);
    border-radius: 0 0 6px 0;
  }
</style> 