---
const { variant = 'red', active = false, ...props } = Astro.props;
---

<button
  class={`
    rounded-full px-8 py-2 font-bold transition-all duration-150 border-2 cursor-pointer
    ${active
      ? `bg-white border-2 ${
          variant === 'red' ? 'text-colombiando-red border-colombiando-red' :
          variant === 'yellow' ? 'text-colombiando-yellow border-colombiando-yellow' :
          variant === 'blue' ? 'text-colombiando-blue border-colombiando-blue' :
          variant === 'white' ? 'text-black border-black' : ''
        }`
      : `border-b-8 ${
          variant === 'red' ? 'bg-colombiando-red text-black border-colombiando-red' : ''}
          ${variant === 'yellow' ? 'bg-colombiando-yellow text-black border-colombiando-yellow' : ''}
          ${variant === 'blue' ? 'bg-colombiando-blue text-black border-colombiando-blue' : ''}
          ${variant === 'white' ? 'bg-white text-black border-black' : ''}
          hover:pb-1 hover:border-b-2 ${
          variant === 'red' ? 'hover:border-colombiando-red' :
          variant === 'yellow' ? 'hover:border-colombiando-yellow' :
          variant === 'blue' ? 'hover:border-colombiando-blue' :
          variant === 'white' ? 'hover:border-black' : ''
        }`
    }
  `}
  {...props}
>
  <slot />
</button>