---
interface Props {
  title: string;
  subtitle: string;
  description: string;
}

const { title, subtitle, description } = Astro.props;
---

<div class="bg-white border border-black rounded-2xl shadow-[2px_2px_0px_0px_#000000] p-7 max-w-[250px] min-w-[200px] mx-auto relative overflow-hidden">
  <div class="flex flex-col">
    <h2 class="text-2xl font-bold text-colombiando-blue">{title}</h2>
    <h3 class="text-xl font-medium text-colombiando-blue">{subtitle}</h3>
    <div class="h-0.5 bg-colombiando-blue w-full mt-2 mb-6"></div>
    <p class="text-xs">{description}</p>
  </div>
</div> 