---
interface Props {
  title: string;
  subtitle: string;
  description: string;
}

const { title, subtitle, description } = Astro.props;
---

<div class="info-card">
  <div class="card-content">
    <h2 class="text-2xl font-bold text-colombiando-blue">{title}</h2>
    <h3 class="text-xl font-medium text-colombiando-blue">{subtitle}</h3>
    <div class="divider"></div>
    <p class="text-xs">{description}</p>
  </div>
</div>

<style>
  .info-card {
    background-color: white;
    border: 1px solid #000000;
    border-radius: 16px;
    box-shadow: 2px 2px 0px 0px #000000;
    padding: 30px;
    max-width: 250px;
    min-width: 200px;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
  }

  .card-content {
    display: flex;
    flex-direction: column;
  }

  .divider {
    height: 2px;
    background-color: #0060BB; /* colombiando-blue */
    width: 100%;
    margin-bottom: 1.5rem;
    margin-top: 0.5rem;
  }

  .description {
    font-size: 1.25rem;
    color: #000;
    line-height: 1.4;
  }
</style> 